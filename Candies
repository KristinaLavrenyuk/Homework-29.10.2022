
#include <iostream>
using namespace std;

int main()
{
    int n, a = 0, b = 0, t;
    cin >> t;

    for (int i = 0; i < t; i++)
    {
        int ii = 1;
        int j = 0;
        cin >> n;
        
        if (n % 2 == 0)
        {
            n -= 2;
            j = n / 2;
        }
        if (n % 2 != 0)
        {
            n -= 1;
            j = n / 2;
        }

        cout << j << endl;
    }
    system("pause");
}
